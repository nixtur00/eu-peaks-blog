    @apply rounded border border-gray-300 bg-white px-4 py-1 text-sm text-gray-700 transition-colors hover:bg-gray-100 dark:border-gray-500 dark:bg-gray-600 dark:text-gray-200 dark:hover:bg-gray-500;
